{% block content %}

Vous etes sur la page de connexion.

	{% for message in app.flashes('errors') %}
		<div class="alert alert-danger">{{ message }}</div>
	{% endfor %}

	<div id="container">

		<form method="post" action="{{ path('login_check') }}" id="connexion_admin">

			<h1>User connexion</h1>
			
				<input id="entrer" type="text" name="_username" placeholder="USERNAME" value="{{ lastUsername }}">

				<input id="entrer" type="password" name="_password" placeholder="PASSWORD">

				<input id='bouton' type="submit" value="connexion">

				<h1>OR</h1>

			<a href="/signUp" id="bouton">SIGN UP</a>

		</form>

	</div>

{% endblock %}


